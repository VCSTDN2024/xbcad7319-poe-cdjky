<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/holo_blue_dark"
            android:padding="16dp"
            android:elevation="4dp">

            <TextView
                android:id="@+id/tvViewCoursesTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Available Job Training Courses"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_marginBottom="8dp" />
        </LinearLayout>

        <!-- Course List Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Browse Courses"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:textColor="@android:color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp">

            <!-- Course 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:background="@android:color/darker_gray"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/tvCourse1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Leadership and Management Training"
                    android:textSize="16sp"
                    android:textColor="@android:color/white"
                    android:padding="8dp" />

                <Button
                    android:id="@+id/btnCourse1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enroll"
                    android:backgroundTint="@android:color/holo_blue_light"
                    android:textColor="@android:color/white" />
            </LinearLayout>

            <!-- Additional Courses -->
            <!-- Course 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:background="@android:color/darker_gray"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/tvCourse2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Technical Skills: Data Analysis"
                    android:textSize="16sp"
                    android:textColor="@android:color/white"
                    android:padding="8dp" />

                <Button
                    android:id="@+id/btnCourse2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enroll"
                    android:backgroundTint="@android:color/holo_blue_light"
                    android:textColor="@android:color/white" />
            </LinearLayout>

            <!-- Course 3 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:background="@android:color/darker_gray"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/tvCourse3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Soft Skills: Communication Workshop"
                    android:textSize="16sp"
                    android:textColor="@android:color/white"
                    android:padding="8dp" />

                <Button
                    android:id="@+id/btnCourse3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enroll"
                    android:backgroundTint="@android:color/holo_blue_light"
                    android:textColor="@android:color/white" />
            </LinearLayout>

            <!-- Course 4 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:background="@android:color/darker_gray"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/tvCourse4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Advanced Technical Writing"
                    android:textSize="16sp"
                    android:textColor="@android:color/white"
                    android:padding="8dp" />

                <Button
                    android:id="@+id/btnCourse4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enroll"
                    android:backgroundTint="@android:color/holo_blue_light"
                    android:textColor="@android:color/white" />
            </LinearLayout>

            <!-- Course 5 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:background="@android:color/darker_gray"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/tvCourse5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Intermediate job training"
                    android:textSize="16sp"
                    android:textColor="@android:color/white"
                    android:padding="8dp" />

                <Button
                    android:id="@+id/btnCourse5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enroll"
                    android:backgroundTint="@android:color/holo_blue_light"
                    android:textColor="@android:color/white" />
            </LinearLayout>

            <!-- Course 6 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:background="@android:color/darker_gray"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/tvCourse6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Front-end Development"
                    android:textSize="16sp"
                    android:textColor="@android:color/white"
                    android:padding="8dp" />

                <Button
                    android:id="@+id/btnCourse6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enroll"
                    android:backgroundTint="@android:color/holo_blue_light"
                    android:textColor="@android:color/white" />
            </LinearLayout>

            <!-- Course 7 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:background="@android:color/darker_gray"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/tvCourse7"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Back-end Development"
                    android:textSize="16sp"
                    android:textColor="@android:color/white"
                    android:padding="8dp" />

                <Button
                    android:id="@+id/btnCourse7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enroll"
                    android:backgroundTint="@android:color/holo_blue_light"
                    android:textColor="@android:color/white" />
            </LinearLayout>

            <!-- Course 8 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:background="@android:color/darker_gray"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/tvCourse8"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Leader team training"
                    android:textSize="16sp"
                    android:textColor="@android:color/white"
                    android:padding="8dp" />

                <Button
                    android:id="@+id/btnCourse8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enroll"
                    android:backgroundTint="@android:color/holo_blue_light"
                    android:textColor="@android:color/white" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
