<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/gradient_blue">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@drawable/card_background"
        android:padding="16dp"
        android:elevation="8dp">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient_blue"
            android:padding="16dp"
            android:gravity="center_horizontal"
            android:elevation="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Payslips"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:gravity="center_horizontal" />
        </LinearLayout>

        <!-- Password Input -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/card_background"
            android:elevation="4dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginBottom="8dp"
                android:text="Enter Password to Unlock Payslips"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Password"
                android:inputType="textPassword"
                android:padding="12dp"
                android:background="@drawable/input_field_background" />
        </LinearLayout>

        <!-- Unlock Payslips Button -->
        <Button
            android:id="@+id/btnUnlockPayslips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Unlock Payslips"
            android:backgroundTint="@color/gradientPurpleEnd"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            android:padding="12dp"
            android:elevation="4dp" />

        <!-- Payslip Details -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="171dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/card_background"
            android:elevation="4dp"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:id="@+id/tvPayslipDetails"
                android:layout_width="match_parent"
                android:layout_height="266dp"
                android:text="Payslip details will appear here..."
                android:textColor="@android:color/black"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Back Button -->
        <Button
            android:id="@+id/btnBack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Back"
            android:backgroundTint="@color/gradientPurpleStart"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            android:padding="12dp"
            android:elevation="4dp" />
    </LinearLayout>
</ScrollView>
