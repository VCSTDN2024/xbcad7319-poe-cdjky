<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/gradient_green">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/gradient_green"
            android:padding="16dp"
            android:elevation="4dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Submit Monthly Hours"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:gravity="center" />
        </LinearLayout>

        <!-- Monthly Hours Input -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_background"
            android:elevation="4dp"
            android:padding="16dp"
            android:layout_marginTop="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enter Monthly Hours"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/etMonthlyHours"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="e.g., 160"
                android:inputType="numberDecimal"
                android:padding="12dp"
                android:background="@drawable/input_field_background"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <!-- Overtime Hours Input -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_background"
            android:elevation="4dp"
            android:padding="16dp"
            android:layout_marginTop="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enter Overtime Hours (Optional)"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/etOvertimeHours"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="e.g., 10"
                android:inputType="numberDecimal"
                android:padding="12dp"
                android:background="@drawable/input_field_background"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <!-- Submit Hours Button -->
        <Button
            android:id="@+id/btnSubmitHours"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit Hours"
            android:layout_marginTop="24dp"
            android:backgroundTint="@color/gradientBlueStart"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:padding="12dp"
            android:elevation="4dp" />

        <!-- Back Button -->
        <Button
            android:id="@+id/btnBack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Back"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/gradientBlueStart"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:padding="12dp"
            android:elevation="4dp" />
    </LinearLayout>
</ScrollView>
