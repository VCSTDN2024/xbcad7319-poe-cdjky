<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Back Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="start">

            <Button
                android:id="@+id/btnBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Back"
                android:layout_marginBottom="16dp"
                android:backgroundTint="@android:color/holo_blue_dark"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="123dp"
            android:background="@android:color/holo_blue_light"
            android:elevation="4dp"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Performance Management"
                android:textColor="@android:color/white"
                android:textSize="22sp"
                android:textStyle="bold" />

            <!-- Welcome Message -->
            <TextView
                android:id="@+id/tvWelcomeMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:text="Welcome, Employee!"
                android:textColor="@android:color/white"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Button Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp"
            android:gravity="center_horizontal">

            <!-- Goals Button -->
            <Button
                android:id="@+id/btnGoals"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="Goals"
                android:backgroundTint="@android:color/holo_green_dark"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:padding="16dp" />

            <!-- Performance Data Button -->
            <Button
                android:id="@+id/btnPerformanceData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="Performance Data"
                android:backgroundTint="@android:color/holo_orange_dark"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:padding="16dp" />

            <!-- Feedback Submission Button -->
            <Button
                android:id="@+id/btnFeedbackSubmission"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="Feedback Submission"
                android:backgroundTint="@android:color/holo_red_dark"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:padding="16dp" />

            <!-- Personal Performance Button -->
            <Button
                android:id="@+id/btnPersonalPerformance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Personal Performance"
                android:backgroundTint="@android:color/holo_blue_dark"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:padding="16dp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
