<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/gradient_blue">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="111dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/gradient_purple"
            android:elevation="4dp"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Performance Management"
                android:textColor="@android:color/white"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvWelcomeMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Welcome, Employee!"
                android:textColor="@android:color/white"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Button Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card_background"
            android:elevation="4dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Goals Button -->
            <Button
                android:id="@+id/btnGoals"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="24dp"
                android:backgroundTint="@color/gradientBlueEnd"
                android:elevation="4dp"
                android:padding="16dp"
                android:text="Goals"
                android:textColor="@android:color/white"
                android:textSize="18sp" />

            <!-- Feedback Submission Button -->
            <Button
                android:id="@+id/btnFeedbackSubmission"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="24dp"
                android:backgroundTint="@color/gradientGreenStart"
                android:elevation="4dp"
                android:padding="16dp"
                android:text="Feedback Submission"
                android:textColor="@android:color/white"
                android:textSize="18sp" />

            <!-- Personal Performance Button -->
            <Button
                android:id="@+id/btnPersonalPerformance"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:backgroundTint="@color/gradientPurpleEnd"
                android:elevation="4dp"
                android:padding="16dp"
                android:text="Personal Performance"
                android:textColor="@android:color/white"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
