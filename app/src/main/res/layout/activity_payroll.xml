<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/gradient_purple">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Back Button Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Back Button -->
            <Button
                android:id="@+id/btnBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Back"
                android:layout_marginBottom="16dp"
                android:background="@drawable/gradient_blue"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/gradient_blue"
            android:padding="16dp"
            android:elevation="4dp">

            <!-- Welcome Message -->
            <TextView
                android:id="@+id/tvPayrollUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome, [User Name]"
                android:textColor="@android:color/white"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />
        </LinearLayout>

        <!-- Payroll Banner -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="108dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/card_background"
            android:elevation="2dp"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Payroll"
                android:textColor="@color/text_primary"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="See all of the finances of the team"
                android:textColor="@color/text_secondary"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Services Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Our Services"
            android:layout_marginTop="16dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary" />

        <!-- Button 1: Monthly Pay Slips -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/btnPayslips"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:backgroundTint="@color/gradientBlueEnd"
                android:text="Monthly Pay Slips"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:elevation="4dp" />
        </LinearLayout>

        <!-- Button 2: Bonuses -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/btnBonuses"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:backgroundTint="@color/gradientPurpleStart"
                android:text="Bonuses"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:elevation="4dp" />
        </LinearLayout>

        <!-- Button 3: Hours Worked -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/btnHoursWorked"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:backgroundTint="@color/gradientPurpleEnd"
                android:text="Hours Worked"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:elevation="4dp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
