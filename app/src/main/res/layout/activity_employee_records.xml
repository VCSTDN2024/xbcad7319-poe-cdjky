<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_blue"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/card_background"
        android:elevation="8dp"
        android:padding="16dp">

        <!-- Welcome Message -->
        <TextView
            android:id="@+id/tvWelcomeEmployee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome, Employee!"
            android:textSize="22sp"
            android:padding="12dp"
            android:textColor="@android:color/white"
            android:background="@drawable/gradient_purple"
            android:gravity="center"
            android:textStyle="bold" />

        <!-- Input Fields for Employee Details -->
        <EditText
            android:id="@+id/etEmployeeName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Full Name"
            android:padding="12dp"
            android:background="@drawable/input_field_background" />

        <Spinner
            android:id="@+id/spinnerRole"
            android:layout_width="match_parent"
            android:layout_height="73dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/input_field_background"
            android:padding="8dp"
            android:popupBackground="@android:color/white" />

        <Spinner
            android:id="@+id/spinnerDepartment"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/input_field_background"
            android:padding="8dp"
            android:popupBackground="@android:color/white" />

        <EditText
            android:id="@+id/etEmployeePhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Contact Number"
            android:inputType="phone"
            android:padding="12dp"
            android:background="@drawable/input_field_background" />

        <EditText
            android:id="@+id/etEmployeeEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:padding="12dp"
            android:background="@drawable/input_field_background" />

        <!-- Save Button -->
        <Button
            android:id="@+id/btnSaveEmployee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save"
            android:backgroundTint="@color/gradientBlueEnd"
            android:textColor="@android:color/white"
            android:layout_marginTop="16dp"
            android:elevation="6dp" />

        <!-- List of Employees -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:padding="8dp"
            android:text="Employee List"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <ListView
            android:id="@+id/lvEmployeeResults"
            android:layout_width="match_parent"
            android:layout_height="197dp"
            android:background="@drawable/listview_background"
            android:divider="@android:color/darker_gray"
            android:dividerHeight="1dp"
            android:padding="8dp" />
    </LinearLayout>
</ScrollView>
